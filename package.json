    "form-data": "^2.3.3",
    "husky": "^2.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "serverless": "^1.41.1",
    "serverless-api-stage": "^1.4.0",
    "serverless-plugin-existing-s3": "^2.3.3",
    "serverless-plugin-typescript": "^1.1.7",
