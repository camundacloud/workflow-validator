    "typescript": "^3.4.3",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "scripts": {
    "clean": "shx rm -Rf build node_modules",
    "build": "webpack && tsc -p .",
    "format": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "lint": "ts-node node_modules/.bin/tslint -p . -t verbose",
    "test": "mocha",
    "deploy": "serverless deploy",
    "dev": "yarn nodemon --exec 'yarn start'",
    "start": "cross-env NODE_ENV=development NODE_OPTIONS=\"--require ts-node/register\" yarn probot run -a 32389 -s \"ieyeeshiu9hou1Xu\" -P ./private-key.pem ./src/probot.ts"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "parser": "typescript",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|jsx|ts|tsx)\"",
      "pre-push": "yarn lint && yarn run -s build && yarn test"
    }
  }
}