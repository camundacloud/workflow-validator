    "@types/node": "^11.13.5",
    "@types/node-fetch": "^2.3.3",
    "@types/ramda": "^0.26.8",
    "@types/sharp": "^0.22.1",
    "@types/uuid": "^3.4.4",
    "babel": "^6.23.0",
